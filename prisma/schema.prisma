generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("CONNECTION_URL_PRISMA")
}

model Candidato {
  id           Int             @id @default(autoincrement())
  nombre       String
  email        String          @unique
  telefono     String?
  skills       String[]
  experiencia  Int
  educacion    String?
  experiencia1 String?
  experiencia2 String?
  createdAt    DateTime        @default(now())
  updatedAt    DateTime        @updatedAt
  urlLinkedin  String?
  estado       EstadoCandidato @default(PENDIENTE)
}

enum EstadoCandidato {
  PENDIENTE
  PRESELECCIONADO
  ENTREVISTA
  DESCARTADO
  CONTRATADO
}
